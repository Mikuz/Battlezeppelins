<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Battlezeppelins</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css/bootstrap.min.css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")

        <script>
          var poller = window.setInterval(function () {
            $.getJSON('@Url.Content("~/Poll/UpdateLastSeen")', function (data) { });
          }, 60000);
        </script>
    </head>
    <body>
        <header>

            <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
              <ul class="nav nav-pills" style="padding-left:50px;margin-top:20px;margin-bottom:10px;">
                <li>@Html.ActionLink("your logo here", "Index", "Home")</li>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Game", "Game","Home")</li>
                <div class="pull-right" style="padding-right:10px">
                  <button type="button" class="btn btn-default btn-lg">
                    <span class="glyphicon glyphicon-hand-right"></span>
                    @DateTime.Now.Year - <a href="https://github.com/Mikuz/Battlezeppelins">Battlezeppelins</a>
                  </button>
                </div>
              </ul>
            </nav>
        </header>
        <div id="body" class="container well" style="padding-top: 70px;">
            @RenderSection("featured", required: false)
            <section>
                @RenderBody()
            </section>
        </div>
        <footer>
          <!-- :( go away! -->
        </footer>
    </body>
</html>
